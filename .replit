modules = ["python-3.10", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TradingAgents SaaS"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TradingAgents SaaS Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TradingAgents SaaS Frontend"

[[workflows.workflow]]
name = "TradingAgents SaaS"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd webapp/backend && python app.py"
waitForPort = 5001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "TradingAgents SaaS Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd webapp/backend && python app.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "TradingAgents SaaS Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd webapp/frontend && npm install && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 5000
externalPort = 80
